# MemU Server Environment Configuration
# Copy this file to .env and fill in your API keys

# ======================
# Server Configuration
# ======================
MEMU_HOST=0.0.0.0
MEMU_PORT=8000
MEMU_DEBUG=false

# ======================
# CORS Configuration
# ======================
# Comma-separated list of allowed origins, or "*" for all
MEMU_CORS_ORIGINS=*

# ======================
# Memory Configuration
# ======================
# if using docker
MEMU_MEMORY_DIR=/app/memory/server
# outside docker
# MEMU_MEMORY_DIR=memu/server/memory
MEMU_ENABLE_EMBEDDINGS=true

# ======================
# LLM Provider Settings
# ======================
# Options: openai, deepseek, azure
MEMU_LLM_PROVIDER=openai

# Maximum tokens for LLM responses (default: 8000)
MEMU_MAX_TOKENS=8000

# ======================
# OpenAI Configuration
# ======================
OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_BASE_URL=your-openai-base-url-here (optional, for custom deployment)
MEMU_OPENAI_MODEL=gpt-4.1-mini

# DeepSeek Configuration
# ======================
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_API_VERSION=2024-05-01-preview
MEMU_DEEPSEEK_MODEL=deepseek-chat

# ======================
# Azure OpenAI Configuration
# ======================
AZURE_API_KEY=your-azure-api-key-here
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2025-01-01-preview
MEMU_AZURE_DEPLOYMENT_NAME=gpt-4.1-mini

# ======================
# Embedding Configuration
# ======================
# Embedding provider: openai, azure, custom
MEMU_EMBEDDING_PROVIDER=openai
MEMU_EMBEDDING_MODEL=text-embedding-3-small

# ======================
# Custom Embedding Configuration (when MEMU_EMBEDDING_PROVIDER=custom)
# ======================
# Model type: sentence_transformers, huggingface, local
MEMU_EMBEDDING_MODEL_TYPE=sentence_transformers
# Compute device: cpu, cuda, mps
MEMU_EMBEDDING_DEVICE=cpu

# Example custom embedding models:
# For Sentence Transformers:
# MEMU_EMBEDDING_MODEL=all-MiniLM-L6-v2
# MEMU_EMBEDDING_MODEL=all-mpnet-base-v2
# MEMU_EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# For HuggingFace Transformers:
# MEMU_EMBEDDING_MODEL_TYPE=huggingface
# MEMU_EMBEDDING_MODEL=bert-base-uncased
# MEMU_EMBEDDING_MODEL=distilbert-base-uncased

# For Local Models:
# MEMU_EMBEDDING_MODEL_TYPE=local
# MEMU_EMBEDDING_MODEL=/path/to/your/local/model

# ======================
# Task Queue (Future feature)
# ======================
MEMU_ENABLE_TASK_QUEUE=false
MEMU_REDIS_URL=redis://localhost:6379/0

# ======================
# Authentication (Future feature)
# ======================
MEMU_REQUIRE_AUTH=false
MEMU_SECRET_KEY=your-secret-key-here
